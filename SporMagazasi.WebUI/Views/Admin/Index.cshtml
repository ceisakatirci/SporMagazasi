@model IEnumerable<SporMagazasi.Domain.Entities.Urun>

@{
    ViewBag.Title = "Admin: Bütün Ürünler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Bütün Ürünler</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">Id</th>
                <th>Fiyat</th>
                <th class="text-right">Fiyat</th>
                <th class="text-center">İşlemler</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.UrunId</td>
                    <td>@Html.ActionLink(item.Ad, "Guncelle", new { item.UrunId })</td>
                    <td class="text-right">@item.Fiyat.ToString("c")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Sil", "Admin"))
                        {
                            @Html.Hidden("UrunId", item.UrunId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Sil" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Yeni ürün ekle", "Ekle", null,
new { @class = "btn btn-default" })
    </div>
</div>
